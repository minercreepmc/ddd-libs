{
  "compilerOptions": {
    "paths": {
      "@application/*": [
        "./src/common/application/*"
      ],
      "@domain/*": [
        "./src/common/domain/*"
      ],
      "@domain": [
        "./src/common/domain"
      ],
      "@infrastructure/*": [
        "./src/common/infrastructure/*"
      ],
      "@utils/*": [
        "./src/common/utils/*"
      ],
      "@types": [
        "./src/types"
      ]
    },
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "allowJs": true
  },
  "include": [
    "./src",
    "./global.d.ts"
  ]
}
